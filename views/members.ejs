    <div>

      <div id="nutritionCard" >
        <div class="card-body text-center">
          <h5>Calorie counter</h5>
          <a type="button" class="btn calorie-btn" href="/loggedin/nutrition">
            Get Started <i class="bi bi-fire"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="header">
      <h1><img class="logo" src="/img/logo-no-background.png" alt="logo-no-background"></h1>
    </div>

    <h2>Welcome!</h2>




    <div id="recipe-container">


      <!-- save button -->
      <form action="/saveRecipe" method="post">
        <div class="icon-container">
          <h5>Generated Recipe:</h5>
          <button class="btn save">
            <i class="bi bi-heart"></i>
            <i class="bi bi-heart-fill"></i>
          </button>
        </div>

      </form>

      <p style="color:rgb(224, 227, 230)"><%- recipe %></p>
      <a href="/filters">
        <button type="button" class="btn btn-primary btn-lg">Add Ingredients</button>
      </a>
    </div>

   


    <form action="/clearRecipe" method="post">
      <button type="submit" id="clearRecipeBtn" class="btn btn-primary btn-lg">Clear Recipe</button>
    </form>



    <%- include("templates/navbar") %>
      <%- include("templates/footer") %>

        <script>


          var iconVisible = document.querySelector('.bi-heart');
          var iconHidden = document.querySelector('.bi-heart-fill');

          iconVisible.addEventListener('click', function () {
            iconHidden.style.display = 'inline-block';
          });

          var saveButton = document.querySelector('.save');

          saveButton.addEventListener('click', function () {
            swal("Recipe saved successfully!", "checkout saved recipe page!", "success");
          });

        </script>