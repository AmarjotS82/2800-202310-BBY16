<%- include("templates/header") %>
    <style>
        .custom-button {
            width: 200px;
        }
      
    </style>

    

<div class="d-flex justify-content-center align-items-center flex-column py-5">
    <h1 class="text-center">List</h1>
    <input type="text" id="search-input" class="text-center" placeholder="Search ingredients...">
  </div>
    
    <ul class="list-group list-unstyled align-items-center flex-column py-5">

        <% if(ingredients.length == 0) { %>
            <% for(let i = 0; i < list.length; i++) { %>
                <li>
                    <!--div for content in list-->
                    <div>
                        <form method="POST" action="/updateLocalIngredient">
                            <button type="submit" id="ingredient-List" class="btn btn-light custom-button" name="foodName"
                                value="<%= list[i].Food %>" data-ingredient="<%= list[i].Food %>">
                                <%= list[i].Food %>
                            </button>
                        </form>
                    </div>
                </li>
            <% } %>
        <% } else { %>
            <% for (let y = 0; y < list.length; y++) { %>
                <% let ingredientFound = false; %>
                <% for (let i = 0; i < ingredients.length; i++) { %>
                  <% if (ingredients[i] == list[y].Food) { %>
                    <% ingredientFound = true; %>
                    <% break; %>
                  <% } %>
                <% } %>
                <li>
                  <!--div for content in list-->
                  <div>
                    <form method="POST" action="/updateLocalIngredient">
                      <button type="submit" id="ingredient-List" class="btn <%= ingredientFound ? 'btn-secondary' : 'btn-light' %> custom-button" name="foodName" value="<%= list[y].Food %>" data-ingredient="<%= list[y].Food %>">
                        <%= list[y].Food %>
                      </button>
                    </form>
                  </div>
                </li>
              <% } %>
        <% } %>
    </ul>

    <div class="text-center">
        <a href="/filters">
            <button type="button" class="btn btn-primary btn-lg text-center">Done</button>
        </a>
    </div>

    <script src="/js/lists.js"></script>

 
    <%- include("templates/footer") %>